@model EmployeeManagement.Models.Empdata

@{
    ViewData["Title"] = "Add Employee data";
}

<h1 class="text-center">Add Employee Data </h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Save_Empdata">
            <div class="main-from">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label class="control-label"> Emolyoee First Name</label>
                <input asp-for="Emp_FristName" class="form-control" />
                <span asp-validation-for="Emp_FristName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Emolyoee Last Name</label>
                <input asp-for="Emp_LastName" class="form-control" />
                <span asp-validation-for="Emp_LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee Email Id</label>
                <input asp-for="Emp_EmailId" class="form-control" />
                <span asp-validation-for="Emp_EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Employee Phone No</label>
                <input asp-for="Emp_PhoneNo" class="form-control" />
                <span asp-validation-for="Emp_PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee Position</label>
                <select asp-for="Emp_Position" class="form-control">
                    <option value="Manager">Manager</option>
                    <option value="Developer">Developer</option>
					<option value="Analyst">Analyst</option>
                </select>
                <span asp-validation-for="Emp_Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee Dept</label>
                <select asp-for="Emp_Dept" class="form-control">
                    <option value="HR">HR</option>
                    <option value="IT">IT</option>
                    <option value="Finance">Finance</option>
					<option value="Marketing">Marketing</option>
                </select>
                <span asp-validation-for="Emp_Dept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee Salary </label>
                <input asp-for="Emp_Salary" class="form-control" />
                <span asp-validation-for="Emp_Salary" class="text-danger"></span>
            </div>
            
            </div>
            <div class="form-group btn_align">
                <input type="submit" value="Add" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
